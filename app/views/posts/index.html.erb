<p id="notice"><%= notice %></p>
<div class="container-fluid">
<h1>Posts</h1>


<%= link_to 'New Post', new_post_path %>
<p>
</div>
<div class="container-fluid">
<% @posts.each do |post| %>
  <div class="card" style="max-width: 20rem;">
    <div class="card-header">User_name
      <div class="container"><%= link_to 'Edit', edit_post_path(post) %></div>
    </div>
    <div class="card-block">
      <p class="card-text"><%= post.content %></p>
    </div>
    <div class="card-footer"><%= post.published.strftime("%B %C %r") %>
    </div>
  </div>
<% end %>
</div>